{
  "name": "Netflix Subtitles Customizer",
  "version": "1.0",
  "description": "Ever got annoyed with netflix lack of subtitle options? This extension is for you. ",
  "manifest_version": 2,
  "default_locale": "pl",
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*"
      ],
      "js": [
        "js/netflix.js"
      ]
    }
  ]
}