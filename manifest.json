{
  "name": "Netflix Subtitles Customizer",
  "short_name":  "NSC",
  "version": "1.0",
  "description": "Ever got annoyed with netflix lack of subtitle options? This extension is for you. ",
  "manifest_version": 2,
  "default_locale": "en",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*"
      ],
      "js": [
        "js/netflix.js"
      ]
    }
  ]
}